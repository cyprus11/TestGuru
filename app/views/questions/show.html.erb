<h1><%= @question.test.title %> Question</h1>
<h1>Вопрос:</h1>
<p><%= @question.body %></p>

<h2>Ответы:</h2>
<%= link_to 'Создать ответ', new_question_answer_path(@question) %>

<ol>
  <%= render @question.answers %>
</ol>

<%= link_to 'Редактировать вопрос', edit_question_path(@question) %>
<%= button_to 'Удалить вопрос', question_path(@question), method: :delete, data: { confirm: 'Вы уверены?' } %>
<%= link_to 'Назад', admin_test_path(@question.test) %>