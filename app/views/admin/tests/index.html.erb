<h1><%= t('.header') %></h1>

<p>
  <%= link_to 'New test', new_admin_test_path %>
</p>

<% if @tests.present?%>
<table>
  <thead>
    <tr>
      <td>Заголовок теста</td>
      <td>Уровень</td>
      <td>Количество вопросов</td>
      <td colspan='3'>Действия</td>
    </tr>
  </thead>
  <tbody>
    <%= render @tests%>
  </tbody>
</table>
<% else %>
 <h1>Нет тестов...</h1>
<% end %>