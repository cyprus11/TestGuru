<div class="row justify-content-center">
  <div class="col-12 col-md-10">
    <h1><%= t('.header') %></h1>

    <p>
      <%= link_to t('.new_test'), new_admin_test_path %>
    </p>

    <% if @tests.present?%>
    <%= render partial: "shared/errors", locals: { resource: @test } %>

    <table class="table table-hover">
      <thead>
        <tr>
          <td class="sort-by-title pointer align-middle">
            <%= t('.title') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </td>
          <td class="align-middle"><%= t('.level') %></td>
          <td class="align-middle"><%= t('.questions_count') %></td>
          <td class="align-middle" colspan='3'><%= t('.actions') %></td>
        </tr>
      </thead>
      <tbody>
        <%= render @tests%>
      </tbody>
    </table>
    <% else %>
    <h1><%= t('.no_tests') %></h1>
    <% end %>
  </div>
</div>