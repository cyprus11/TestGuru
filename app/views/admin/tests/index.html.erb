<h1><%= t('.header') %></h1>

<p>
  <%= link_to t('.new_test'), new_admin_test_path %>
</p>

<% if @tests.present?%>
<table>
  <thead>
    <tr>
      <td><%= t('.title') %></td>
      <td><%= t('.level') %></td>
      <td><%= t('.questions_count') %></td>
      <td colspan='3'><%= t('.actions') %></td>
    </tr>
  </thead>
  <tbody>
    <%= render @tests%>
  </tbody>
</table>
<% else %>
 <h1><%= t('.no_tests') %></h1>
<% end %>