<%= form_with model: [:admin, @test], local: true do |f| %>
  <%= render 'shared/errors', resource: @test %>

  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, id: :test_title %>
  </div>

  <div class="mb-3">
    <%= f.label :level, class: "form-label" %>
    <%= f.number_field :level, id: :test_level, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :category_id, class: "form-label" %>
    <%= f.collection_select :category_id, Category.all, :id, :title, prompt: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :timer, class: "form-label" %>
    <%= f.number_field :timer, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.check_box :display, { class: "form-check-input" }, true %>
    <%= f.label :display, class: "form-check-label" %>
  </div>

  <div class="mb-3">
    <%= f.submit t('.submit'), class: 'btn btn-primary' %>
  </div>
<% end %>