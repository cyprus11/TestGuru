<div class="row justify-content-center">
  <div class="col-12 col-md-8">
    <h1><%= t('.header') %></h1>
    <% if @feedbacks.any? %>
    <table class="table table-hover">
      <thead>
        <tr>
          <td><%= t('.from') %></td>
          <td><%= t('.title') %></td>
          <td><%= t('.text') %></td>
        </tr>
      </thead>
      <tbody>
        <%= render @feedbacks %>
      </tbody>
    </table>
    <% else %>
      <p><%= t('.no_feedback') %></p>
    <% end %>
  </div>
</div>
