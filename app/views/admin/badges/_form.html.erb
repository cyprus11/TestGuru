<%= form_with model: [:admin, @badge], local: true do |f| %>
  <%= render 'shared/errors', resource: @badge %>

  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <div class="row">
      <div class="col-12 col-md-7">
        <%= f.label :image, class: "form-label" %>
        <%= f.text_field :image, class: "form-control", id: "imageLink" %>
      </div>
      <div class="col-12 col-md-3">
        <%= image_tag @badge.image, size: "60x60", id: "imagePreShow" %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :role_name, class: "form-label" %>
    <div class="input-group">
      <%= f.text_field :role_name, class: "form-control", id: "imageLink", aria: { describedby: "basic-addon1" } %>
      <span class="input-group-text" id="basic-addon1" data-bs-toggle="tooltip" data-bs-placement="right" title="<%= available_roles %>">?</span>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :role_value, class: "form-label" %>
    <%= f.text_field :role_value, class: "form-control", id: "imageLink" %>
  </div>

  <div class="mb-3">
    <%= f.submit t('.submit'), class: 'btn btn-primary' %>
  </div>
<% end %>