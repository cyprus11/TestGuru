<%= form_with model: [:admin, @badge], local: true do |f| %>
  <%= render 'shared/errors', resource: @badge %>

  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <div class="row">
      <div class="col-12 col-md-7">
        <%= f.label :image, class: "form-label" %>
        <%= f.text_field :image, class: "form-control", id: "imageLink" %>
      </div>
      <div class="col-12 col-md-3">
        <%= image_tag @badge.image, size: "60x60", id: "imagePreShow" %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= f.check_box :from_the_first_time, { class: "form-check-input" }, true %>
    <%= f.label :from_the_first_time, class: "form-check-label" %>
  </div>

  <div class="mb-3">
    <%= f.check_box :all_category, { class: "form-check-input" }, true %>
    <%= f.label :all_category, class: "form-check-label" %>
  </div>

  <div class="mb-3">
    <%= f.check_box :all_levels, { class: "form-check-input" }, true %>
    <%= f.label :all_levels, class: "form-check-label" %>
  </div>

  <div class="mb-3">
    <%= f.submit t('.submit'), class: 'btn btn-primary' %>
  </div>
<% end %>