<tr>
  <td><%= image_tag badge.image, size: "40x40" %></td>
  <td><%= badge.title %></td>
  <td><%= link_to t('.show'), admin_badge_path(badge) %></td>
  <td><%= link_to t('.edit'), edit_admin_badge_path(badge) %></td>
  <td><%= link_to t('.delete'),
                  admin_badge_path(badge),
                  method: :delete,
                  data: { confirm: t('.confirm') } %></td>
</tr>